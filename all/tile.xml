<project>
    <build>
        <plugins>
            <plugin>
                <groupId>io.repaint.maven</groupId>
                <artifactId>tiles-maven-plugin</artifactId>
                <version>${tiles-maven-plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <tiles>
                        <tile>net.kemitix.tiles:maven-plugins:0.4.0</tile>
                        <tile>net.kemitix.tiles:enforcer:0.4.0</tile>
                        <tile>net.kemitix.tiles:compiler:0.4.0</tile>
                        <tile>net.kemitix.tiles:huntbugs:0.4.0</tile>
                        <tile>net.kemitix.tiles:pmd:0.4.0</tile>
                        <tile>net.kemitix.tiles:digraph:0.4.0</tile>
                        <tile>net.kemitix.tiles:testing:0.4.0</tile>
                        <tile>net.kemitix.tiles:coverage:0.4.0</tile>
                        <tile>net.kemitix.tiles:pitest:0.4.0</tile>
                        <tile>net.kemitix.tiles:release:0.4.0</tile>
                    </tiles>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
